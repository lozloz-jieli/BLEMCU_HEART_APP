-DCONFIG_CODE_BANK_ENABLE \
-DAEC_MALLOC_ENABLE=1 \


endif #ifeq ($(BANK_ENABLE),y)

ifeq ($(OTA_UPDATE),y)
CC_DEFINE += \
-DCONFIG_UPDATA_ENABLE \
-DCONFIG_OTA_UPDATA_ENABLE \

