#================================================================#
CC_DEFINE += \
	   $(SYS_EVENT_CFG_DEFINE) \
	   $(SYS_TIMER_CFG_DEFINE) \
	   $(SYS_APP_CORE_CFG_DEFINE) \
	   $(SYS_VFS_CFG_DEFINE) \
	   $(SYS_VM_CFG_DEFINE) \
